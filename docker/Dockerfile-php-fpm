FROM php:8.1-fpm

# Argumenty pre build
ARG USER=www-data
ARG UID=1000

# Inštalácia systémových závislostí
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libpq-dev \
    zip \
    unzip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Inštalácia PHP rozšírení
RUN docker-php-ext-install \
    pdo_pgsql \
    mbstring \
    exif \
    pcntl \
    bcmath \
    opcache

# Optimalizácia PHP
COPY ./docker/php/php.ini /usr/local/etc/php/conf.d/php.ini
COPY ./docker/php/opcache.ini /usr/local/etc/php/conf.d/opcache.ini

# Inštalácia Composer
COPY --from=composer:2.2 /usr/bin/composer /usr/bin/composer

# Nastavenie pracovného adresára
WORKDIR /var/www/html

# Nastavenie oprávnení pre www-data
RUN chown -R www-data:www-data /var/www/html

# Prepnutie na www-data user
USER ${USER}

# Vytvorenie Laravel projektu
RUN composer create-project laravel/laravel .

# Nastavenie oprávnení pre storage a cache
RUN mkdir -p \
    storage/framework/cache/data \
    storage/framework/sessions \
    storage/framework/views \
    storage/logs \
    bootstrap/cache \
    && chmod -R 775 \
        storage \
        bootstrap/cache

# Kopírovanie .env súboru
COPY ./backend/.env.example ./.env

# Inštalácia závislostí a optimalizácia
RUN composer install --optimize-autoloader --no-dev

# Generovanie kľúča a cache
RUN php artisan key:generate \
    && php artisan config:cache \
    && php artisan route:cache \
    && php artisan view:cache

EXPOSE 9000
CMD ["php-fpm"]