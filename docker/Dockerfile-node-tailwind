FROM node:18-alpine

WORKDIR /app

# Inštalácia závislostí pre build
RUN apk add --no-cache python3 make g++

# Kopírovanie package.json a package-lock.json
COPY ./frontend-tailwind/package*.json ./

# Inštalácia závislostí s --platform=linux/amd64
RUN npm install --platform=linux/amd64

# Kopírovanie zvyšku aplikácie
COPY ./frontend-tailwind/ ./

# Nastavenie environment variables
ENV VITE_HOST=0.0.0.0
ENV VITE_PORT=3001

EXPOSE 3001

# Spustenie dev servera
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3001"]